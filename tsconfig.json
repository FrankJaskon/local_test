{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "es5",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"paths": {
			"*": [
				"./src/*"
			]
		},
		"types": [
			"node",
			"jest"
		]
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
		"./config/jest/jest-setup.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"**/*.ts",
		"**/*.tsx",
		"**/**/*.ts",
		"**/**/*.tsx"
	]
}